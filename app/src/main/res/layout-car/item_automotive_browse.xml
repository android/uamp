<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/automotive_spacing_medium"
    android:layout_marginVertical="@dimen/automotive_spacing_small"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/automotive_surface"
    app:cardCornerRadius="@dimen/automotive_corner_radius"
    app:cardElevation="@dimen/automotive_elevation_low"
    app:rippleColor="@color/automotive_ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/automotive_list_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/automotive_spacing_medium">

        <!-- Album Art -->
        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="@dimen/automotive_album_art_size"
            android:layout_height="@dimen/automotive_album_art_size"
            android:layout_marginEnd="@dimen/automotive_spacing_medium"
            android:background="@drawable/ic_album_black_24dp"
            android:contentDescription="@string/album_art"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_album_black_24dp" />

        <!-- Track Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Track Title -->
            <TextView
                android:id="@+id/trackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/automotive_on_surface"
                android:textStyle="bold"
                tools:text="Track Title" />

            <!-- Artist Name -->
            <TextView
                android:id="@+id/artistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/automotive_spacing_tiny"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/automotive_on_surface_variant"
                tools:text="Artist Name" />

            <!-- Album Name -->
            <TextView
                android:id="@+id/albumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/automotive_spacing_tiny"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/automotive_on_surface_variant"
                tools:text="Album Name" />

        </LinearLayout>

        <!-- Track Duration -->
        <TextView
            android:id="@+id/trackDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/automotive_spacing_medium"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/automotive_on_surface_variant"
            tools:text="3:45" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 