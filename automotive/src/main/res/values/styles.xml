<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/CarToolbarNavButton</item>
        <item name="colorPrimary">@color/automotive_primary</item>
        <item name="colorPrimaryDark">@color/automotive_primary_variant</item>
        <item name="colorAccent">@color/automotive_secondary</item>
        <item name="android:buttonStyle">@style/CarButton</item>
        <item name="android:windowBackground">@color/automotive_background</item>
        <item name="toolbarStyle">@style/CarToolbar</item>
        <item name="android:textColorPrimary">@color/automotive_on_background</item>
    </style>

    <!-- NoActionBar theme for AutomotiveMainActivity -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/automotive_primary</item>
        <item name="android:navigationBarColor">@color/automotive_background</item>
    </style>

    <!-- AppBar Overlay Theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/automotive_primary</item>
        <item name="colorOnPrimary">@color/automotive_on_primary</item>
    </style>

    <!-- Popup Overlay Theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/automotive_primary</item>
        <item name="colorSurface">@color/automotive_surface</item>
    </style>

    <style name="CarToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/sign_in_toolbar_padding</item>
        <item name="android:paddingEnd">@dimen/sign_in_toolbar_padding</item>
        <item name="android:minHeight">@dimen/sign_in_toolbar_height</item>
        <item name="navigationIcon">@drawable/sign_in_toolbar_back_icon</item>
    </style>

    <style name="CarToolbarNavButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/white</item>
        <item name="android:background">@drawable/sign_in_toolbar_back_ripple_background</item>
        <item name="android:minWidth">@dimen/sign_in_toolbar_nav_button_size</item>
    </style>

    <style name="AppTheme.Drawer" parent="Theme.MaterialComponents.NoActionBar">
        <item name="toolbarStyle">@style/CarToolbar</item>
    </style>

    <style name="CarButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ellipsize">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/default_button_background</item>
        <item name="android:textAppearance">@style/SecondaryText.Dark</item>
    </style>

    <style name="CarButton.SignIn">
        <item name="android:background">@drawable/sign_in_button_background</item>
    </style>

    <style name="CarButton.GoogleSignIn">
        <item name="android:background">@drawable/google_sign_in_button_background</item>
    </style>

    <style name="DisplayText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/display_text_size</item>
    </style>

    <style name="PrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="SecondaryText.Dark">
        <item name="android:textColor">@color/car_text_dark</item>
    </style>

    <style name="InputBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/grey_300</item>
        <item name="boxStrokeWidth">@dimen/sign_in_input_box_stroke_width</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/sign_in_input_box_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/sign_in_input_box_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/sign_in_input_box_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/sign_in_input_box_radius</item>
    </style>

    <!-- Automotive specific styles -->
    <style name="AutomotiveCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/automotive_surface</item>
        <item name="cardCornerRadius">@dimen/automotive_corner_radius</item>
        <item name="cardElevation">@dimen/automotive_elevation_low</item>
        <item name="android:layout_margin">@dimen/automotive_spacing_small</item>
    </style>

    <style name="AutomotiveButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/automotive_button_size</item>
        <item name="android:layout_height">@dimen/automotive_button_size</item>
        <item name="android:minWidth">@dimen/automotive_button_size</item>
        <item name="android:minHeight">@dimen/automotive_button_size</item>
        <item name="backgroundTint">@color/automotive_surface</item>
        <item name="android:textColor">@color/automotive_on_surface</item>
        <item name="rippleColor">@color/automotive_ripple</item>
    </style>
</resources>
