<resources>
  <style name="Widget.Automotive.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="titleMarginStart">@dimen/toolbar_title_margin_start</item>
    <item name="titleTextAppearance">@style/TextAppearance.Automotive.PrimaryText</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:paddingStart">@dimen/toolbar_padding</item>
    <item name="android:paddingEnd">@dimen/toolbar_padding</item>
    <item name="android:minHeight">@dimen/toolbar_height</item>
    <item name="navigationIcon">@drawable/toolbar_back_icon</item>
  </style>

  <style name="Widget.Automotive.Toolbar.NavButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="tint">@android:color/white</item>
    <item name="android:background">@drawable/toolbar_back_ripple_background</item>
    <item name="android:minWidth">@dimen/toolbar_nav_button_size</item>
  </style>

  <style name="AutomotivePreference" parent="PreferenceThemeOverlay">
    <item name="preferenceStyle">@style/AutomotivePreference.Preference</item>
    <item name="preferenceCategoryStyle">@style/AutomotivePreference.Preference.Category</item>
    <item name="dialogPreferenceStyle">@style/AutoPreference.Preference.Dialog</item>
    <item name="checkBoxPreferenceStyle">@style/AutoPreference.Preference.CheckBox</item>
    <item name="seekBarPreferenceStyle">@style/AutoPreference.Preference.Seekbar</item>
    <item name="switchPreferenceStyle">@style/AutoPreference.Preference.Switch</item>
    <item name="editTextPreferenceStyle">@style/AutoPreference.Preference.Dialog.EditText</item>
  </style>

  <style name="AutomotivePreference.Preference">
    <item name="allowDividerBelow">false</item>
    <item name="allowDividerAbove">false</item>
    <item name="android:layout">@layout/preference</item>
  </style>

  <style name="AutomotivePreference.Preference.Category">
    <item name="android:layout">@layout/preference_category</item>
  </style>

  <style name="AutoPreference.Preference.CheckBox" parent="@style/Preference.CheckBoxPreference.Material">
    <item name="android:layout">@layout/preference</item>
    <item name="iconSpaceReserved">false</item>
  </style>

  <style name="AutoPreference.Preference.Switch" parent="@style/Preference.SwitchPreference.Material">
    <item name="android:layout">@layout/preference</item>
    <item name="iconSpaceReserved">false</item>
  </style>

  <style name="AutoPreference.Preference.Seekbar" parent="@style/Preference.SeekBarPreference.Material">
    <item name="android:layout">@layout/preference_seekbar</item>
    <item name="iconSpaceReserved">false</item>
  </style>

  <style name="AutoPreference.Preference.Dialog" parent="@style/Preference.DialogPreference.Material">
    <item name="android:layout">@layout/preference</item>
    <item name="iconSpaceReserved">false</item>
  </style>

  <style name="AutoPreference.Preference.Dialog.EditText" parent="@style/Preference.DialogPreference.EditTextPreference.Material">
    <item name="android:layout">@layout/preference</item>
    <item name="android:dialogLayout">@layout/preference_edit_text</item>
    <item name="iconSpaceReserved">false</item>
  </style>

  <style name="TextAppearance.Automotive.PrimaryText" parent="TextAppearance.AppCompat">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/primary_text_size</item>
  </style>

  <style name="TextAppearance.Automotive.SecondaryText" parent="TextAppearance.AppCompat">
    <item name="android:textSize">@dimen/secondary_text_size</item>
  </style>

  <style name="TextAppearance.Automotive.SecondaryText.Dark">
    <item name="android:textColor">?android:textColorSecondary</item>
  </style>
</resources>
