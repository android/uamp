<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/preference_start_margin"
    android:layout_marginEnd="@dimen/preference_end_margin"
    android:layout_marginTop="@dimen/preference_top_margin"
    android:layout_marginBottom="@dimen/preference_bottom_margin"
    android:gravity="center_vertical"
    android:orientation="vertical">

  <TextView
      android:id="@android:id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.Automotive.PrimaryText"
      android:textColor="?android:colorAccent" />
</LinearLayout>